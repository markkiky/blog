                                            <option data-tokens="option 2">Kiambu</option>
                                            <option data-tokens="option 3">Mombasa</option> %>
                                            
                                        </select>
                                          
                                    </div>
                                </div>

                                <div class="col-12 p-0">
                                    <div class="form-group">
                                        <label>
                                            <strong>Select Wing</strong>  <strong class="text-danger">*</strong>
                                            <p class="d-none"><small>Select wing</small></p>
                                        </label>
                                        <select class="selectpicker form-control show-tick" title="Wing" data-live-search="true" name="hotel_wing_id" required>
                                            <% @hotel_wings.each do |hotel_wing| %>
                                                <option value="<%= hotel_wing["id"] %>"><%= hotel_wing["wing_description"] %></option>
                                            <% end %>
                                            <%# <option data-tokens="select">-- Select Wing --</option>
                                            <option data-tokens="option 1">Kijivu</option>
                                            <option data-tokens="option 2">Samawati</option>
                                            <option data-tokens="option 3">Zambarau</option> %>
                                            
                                          </select>
                                          
                                    </div>
                                </div>

                                <div class="col-12 p-0">
                                    <div class="form-group">
                                        <label>
                                            <strong>Select Room Type</strong>  <strong class="text-danger">*</strong>
                                            <p class="d-none"><small>Select type room type</small></p>
                                        </label>
                                        <select class="selectpicker form-control show-tick" title="Room type" data-live-search="true" name="room_type_id" required>
                                            <% @room_types.each do |room_type| %>
                                                <option value="<%= room_type["id"] %>"><%= room_type["room_type_description"] %></option>
                                            <% end %>
                                            
                                          </select>
                                          
                                    </div>
                                </div>

                                <div class="col-12 p-0">
                                    <div class="form-group"> 
                                        <label>
                                            <strong>Room Description</strong>  <strong class="text-danger">*</strong>
                                        </label>                                                            
                                        <input type="text" class="form-control" placeholder="Enter the costing criteria" name="room_price" required>
                                    </div>
                                </div>  
                                
                                <div class="col-12">
                                    <button type="submit" class="btn btn-success btn-sm btn--icon-text ml-2 float-right"><i class="zmdi zmdi-check-all mr-2"></i>Submit</button>
                                    
                                </div>
                            </div>

                        <% end %>

