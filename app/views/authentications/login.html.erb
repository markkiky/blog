}

.login-form-header{
    display: flex;
    align-items: center;
    flex-direction: column;
    margin-bottom: 40px;
}

.login-content{
    height: 100vh;
    background: white;
    display: flex;
    padding: 4rem;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.login-form{
    padding: 6rem 5rem !important;
    border: 1px solid #80808052;
