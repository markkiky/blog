<body data-ma-theme="green">
    <main class="main">
        <div class="page-loader">
            <div class="page-loader__spinner">
                <svg viewBox="25 25 50 50">
                    <circle cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
                </svg>
            </div>
            <span class="powerd-container">
                <strong>A product of</strong>
                <img src="assets/demo/img/logo-files/nouveta_logo.png">
            </span>
        </div>

        <section class="">
            <div class="login-content col-12">
                <div class="row">
                    <div class="col-sm-12 col-md-12 col-lg-6 d-flex justify-content-center pr-2">
                        <span class="login-img-container">
                            <img src="assets/demo/img/bg/hotel-checkin.jpg">
                        </span>
                    </div>

                    <div class="col-sm-12 col-md-12 col-lg-6">
                        <%= form_with url: "auth/login", method: :post, class: "login-form" do |form| %>
                            <div class="login-form-header p-1">
                                <a class="" href="index.html"><img class="the-login-logo" src="assets/demo/img/logo-files/bookinn.png"></a>
                                <h2 class="mb-2">Login Page</h2>
                                <small>Fill in the information below to get access to the bookinn dashboard</small>
                            </div>
                            <div class="form-group"> 
                                <label>
                                    <strong>Email</strong>  <strong class="text-danger">*</strong>
                                </label>                                                            
                                <input type="text" class="form-control" placeholder="Enter your email address" name="email" required>
                            </div>

                            <div class="form-group"> 
                                <label>
                                    <strong>Password</strong>  <strong class="text-danger">*</strong>
                                </label>                                                            
                                <input type="password" class="form-control" placeholder="Enter your password" name="password" required>
                            </div>

                            <div class="form-group"> 
                                <button class="btn btn-primary btn-login">LOGIN</button>
                            </div>
                        <% end %>
                        <form class="login-form d-none">
                            <div class="login-form-header p-1">
                                <a class="" href="index.html"><img class="the-login-logo" src="assets/demo/img/logo-files/bookinn.png"></a>
